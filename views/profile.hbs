<h1>Профиль</h1>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img src="/{{user.avatarUrl}}"  class="avatar" alt="avatar-{{user.name}}">
    {{else}}
      <p>Аватара нет</p>
    {{/if}}
  </div>
  <div class="col s6">
    <form action="/profile" method="post" enctype="multipart/form-data">
      <p>Ваш емейл: <strong>{{user.email}}</strong></p>
      <div class="input-field">
        <input id="name" type="text" name="name" class="validate" value="{{user.name}}">
        <label for="name">Имя</label>
        <span class="helper-text" data-error="Имя не может бить пустим"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Аватар</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button class="btn" type="submit">Изменить</button>

    </form>
  </div>
</div>
