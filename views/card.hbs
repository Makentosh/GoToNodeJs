<h1>{{title}}</h1>


<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действие</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn btn-small js-remove"
                    data-csrf="{{@root.csrf}}"
                    data-id="{{_id}}">Удалить</button>
          </td>
          <td></td>
        </tr>
      {{/each}}
      </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
      <button type="submit" class="btn">
        Сделать заказ
      </button>
      <input type="hidden" name="_csrf" value="{{@root.csrf}}">
    </form>

  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>

